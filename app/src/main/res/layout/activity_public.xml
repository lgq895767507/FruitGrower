<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dcdbdb"
    tools:context="com.lgq.fruitgrower.view.act.PublicActivity">

    <EditText
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_content"
        android:layout_alignParentTop="true"
        android:inputType="textMultiLine"
        android:hint="@string/public_content"
        android:background="@null"
        android:windowSoftInputMode="adjustResize"
        android:layout_alignParentStart="true" />

    <ImageView
        android:visibility="gone"
        android:padding="@dimen/activity_horizontal_margin"
        android:layout_width="@dimen/public_img_width"
        android:layout_height="@dimen/public_img_height"
        android:id="@+id/Im_photo"
        android:layout_below="@+id/tv_content"
        android:layout_alignParentStart="true"
        />
    <ImageView
        android:visibility="gone"
        android:layout_width="@dimen/public_img_cal_width"
        android:layout_height="@dimen/public_img_cal_height"
        android:id="@+id/Im_close"
        android:layout_below="@+id/tv_content"
        android:layout_alignRight="@+id/Im_photo"
        android:layout_alignTop="@+id/Im_photo"
        android:src="@android:drawable/ic_menu_close_clear_cancel"/>

    <View
        android:layout_marginBottom="@dimen/public_view_marBtm"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/public_view_height"
        android:background="@color/view_line"/>
    <RadioGroup
        android:layout_alignParentBottom="true"
        android:id="@+id/rg_pub"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/public_rg_height"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_photo"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:button="@null"
            android:text="图片"/>

        <RadioButton
            android:id="@+id/rb_about"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:button="@null"
            android:text=" @ " />




        <RadioButton
            android:id="@+id/rb_emoji"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:button="@null"
            android:text="表情"/>

        <RadioButton

            android:id="@+id/rb_add"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:button="@null"
            android:text="分享" />
    </RadioGroup>




</RelativeLayout>
