<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/avatar_img_width"
        android:layout_height="@dimen/avatar_img_height"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/avatar_img_marleft"
        android:scaleType="centerCrop"
        android:src="@android:drawable/ic_menu_gallery" />

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/avatar_rl_height"
        android:padding="@dimen/avatar_rl_padding" >

        <TextView
            android:id="@+id/tv_subhead"
            style="@style/TextViewSubhead"
            android:text="吴彦祖" />

        <TextView
            android:id="@+id/tv_caption"
            style="@style/TextViewCaption"
            android:layout_alignParentBottom="true"
            android:text="没错,我就是油坊桥吴彦祖"
            android:textColor="@color/txt_gray" />
    </RelativeLayout>

</LinearLayout>